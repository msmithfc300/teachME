{% extends 'base.html.twig' %}

{% block title %}Subject index{% endblock %}

{% block body %}
<div class="grid-container">
    <div class="grid-child-image">
        <h1>Click on a subject to get started </h1>
        <img  src="{{ asset('images/prof_me.png') }}" alt="prof"/>
        <img  src="{{ asset('images/girlWriting.png') }}" alt="girl writing"/>
    </div>
    <div class="grid-child-form">
        {% for subject in subjects %}
            <div class="btns">
                    <a class="btn" href="{{ path('app_subject_show', {'id': subject.id}) }}"> {{ subject.name }}</a>
            </div>
            {% if is_granted('ROLE_TEACHER') %}
<div class="btns">
                    <a class="edit" href="{{ path('app_subject_edit', {'id': subject.id}) }}">edit</a>
            {% endif %}
            </div>
        {% else %}
                <h2>no subjects found</h2>
        {% endfor %}
    {% if is_granted('ROLE_TEACHER') %}
        <div class="btns">
    <a class="edit" href="{{ path('app_subject_new') }}">Create new</a>
    {%  endif %}
    </div>
    </div>
</div>
{% endblock %}
